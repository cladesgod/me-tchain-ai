# =============================================
# me.tchain.ai Environment Configuration
# =============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ---------------------------------------------
# General
# ---------------------------------------------
ENVIRONMENT=development  # development | staging | production
DEBUG=true

# ---------------------------------------------
# Backend
# ---------------------------------------------
API_HOST=0.0.0.0
API_PORT=8001
API_V1_PREFIX=/api/v1

# CORS - comma separated origins
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# ---------------------------------------------
# Database
# ---------------------------------------------
DATABASE_URL=sqlite:///./data/app.db
# For PostgreSQL (production):
# DATABASE_URL=postgresql://user:password@localhost:5432/metchain

# ---------------------------------------------
# LLM Configuration
# ---------------------------------------------
# Microsoft AI Foundry / DeepSeek
AZURE_AI_ENDPOINT=https://your-endpoint.openai.azure.com/
AZURE_AI_CREDENTIAL=your-api-key-here
AZURE_API_VERSION=2024-12-01-preview

# DeepSeek Model
DEEPSEEK_MODEL_NAME=DeepSeek-R1-0528
DEEPSEEK_DEPLOYMENT_NAME=DeepSeek-R1-0528

# ---------------------------------------------
# LangSmith (Monitoring)
# ---------------------------------------------
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=your-langsmith-api-key
LANGCHAIN_PROJECT=me-tchain-ai
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# ---------------------------------------------
# Contact
# ---------------------------------------------
CONTACT_EMAIL=timucinutkan@gmail.com

# ---------------------------------------------
# Frontend (Vite)
# ---------------------------------------------
VITE_API_URL=http://localhost:8001
VITE_WS_URL=ws://localhost:8001/api/v1/chat

# ---------------------------------------------
# Security
# ---------------------------------------------
SECRET_KEY=your-secret-key-here-change-in-production
RATE_LIMIT_PER_MINUTE=60
