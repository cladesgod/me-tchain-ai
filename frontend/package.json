{
  "name": "metchain-frontend",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:e2e": "playwright test",
    "validate": "pnpm lint && pnpm type-check",
    "prepare": "cd .. && husky frontend/.husky || true"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@react-three/drei": "^9",
    "@react-three/fiber": "^8",
    "clsx": "^2",
    "d3": "^7",
    "framer-motion": "^11",
    "i18next": "^25.7.4",
    "leaflet": "^1",
    "lucide-react": "^0.562.0",
    "react": "^18",
    "react-dom": "^18",
    "react-i18next": "^16.5.1",
    "react-leaflet": "^4",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^6",
    "tailwind-merge": "^2",
    "three": "^0.168",
    "three-stdlib": "^2.36.1",
    "zod": "^4.3.5",
    "zustand": "^4"
  },
  "devDependencies": {
    "@playwright/test": "^1",
    "@testing-library/jest-dom": "^6",
    "@testing-library/react": "^14",
    "@types/d3": "^7",
    "@types/leaflet": "^1",
    "@types/node": "^25.0.3",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/three": "^0.168",
    "@typescript-eslint/eslint-plugin": "^7",
    "@typescript-eslint/parser": "^7",
    "@vitejs/plugin-react": "^4",
    "autoprefixer": "^10",
    "eslint": "^8",
    "eslint-plugin-react-hooks": "^4",
    "eslint-plugin-react-refresh": "^0.4",
    "husky": "^9.1.7",
    "jsdom": "^24",
    "lint-staged": "^16.2.7",
    "postcss": "^8",
    "prettier": "^3",
    "tailwindcss": "^3",
    "typescript": "^5",
    "vite": "^5",
    "vitest": "^1"
  }
}
